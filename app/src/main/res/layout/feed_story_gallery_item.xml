<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:paddingLeft="@dimen/list_pd_left"
        android:paddingTop="@dimen/list_pd_top"
        android:paddingBottom="@dimen/list_item_spacing"
        android:paddingRight="@dimen/list_pd_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/txt_title"
            android:maxLines="2"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="dasdsafdsffsd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:layout_marginTop="5dp"
            android:id="@+id/layout_thumbs"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/feed_thumb_height">

        <ImageView
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        <ImageView
                android:layout_marginLeft="2dp"
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        <ImageView
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:layout_marginLeft="2dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

    </LinearLayout>
    <TextView
            android:id="@+id/txt_date"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_width="wrap_content"
            android:layout_marginTop="3dp"
            android:text="sdsafsdfsdfsdfsd"
            android:layout_height="wrap_content"/>

</LinearLayout>